/**
 * Parses CAH data to a compatible format.
 * @param {string} data
 * @return {string}
 */
function parse(data) {
    data = data+"";
    if (data.substring(0, 6) != "cards=") {
        throw(new Error("Invalid cards format: "+data.substring(0,6)+"..."));
    }
    data = data.substring(6);
    data = data.replace(/[_]+[ ]?/g, "_ ");
    data = data.split("<>");
    var txt = "";
    for (var i=0; i<data.length; i++) {
        txt += data[i]+"\n";
    }
    return txt;
}

// Includes
var fs = require("fs");

// Argv
if (process.argv.length < 3) {
    process.stderr.write("wildcardsgame cah2___ (c) 2013 Daniel Wirtz <dcode@dcode.io>\nConverts original CAH data files to a compatible format.\n");
    process.stderr.write("\n   Usage: cah2___ [cahFile] > [txtFile]\n");
    process.exit(1);
}

// Do it.
var data = fs.readFileSync(process.argv[2]);
process.stdout.write(parse(data));
